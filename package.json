{
  "name": "toastizy",
  "version": "1.0.6",
  "description": "A lightweight TypeScript library for toast notifications",
  "keywords": [
    "toast",
    "notification",
    "typescript"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/toastr.css",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "build": "npm run build:cjs && npm run build:umd && cp src/styles/toastr.css dist/",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:umd": "tsc -p tsconfig.umd.json"
  },
  "author": "SideCare",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "uuid": "^9.0.1"
  }
}
